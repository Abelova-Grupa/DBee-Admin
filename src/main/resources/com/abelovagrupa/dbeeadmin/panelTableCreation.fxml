<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>

<!--TODO: Table textFields shouldn't repeat in each tab-->
<?import javafx.scene.layout.BorderPane?>

<Tab text="New Table" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.abelovagrupa.dbeeadmin.view.PanelTableCreation">
   <content>
      <BorderPane>
         <top>
            <HBox alignment="CENTER_LEFT" spacing="6.0" BorderPane.alignment="TOP_CENTER">
               <children>
                  <Label text="Table name:" />
                  <TextField prefHeight="26.0" prefWidth="204.0" />
                  <Label text="Engine:" />
                  <ComboBox fx:id="cbEngines" prefWidth="150.0" />
               </children>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <padding>
                  <Insets bottom="12.0" left="6.0" top="12.0" />
               </padding>
            </HBox>
         </top>

         <center>
            <TabPane side="BOTTOM" BorderPane.alignment="CENTER">
               <tabs>
                  <Tab text="Columns">
                  <VBox  minHeight="-Infinity" minWidth="-Infinity" prefWidth="1210.0" >
                     <children>
                        <ToolBar prefHeight="26.0" prefWidth="200.0">
                          <items>
                            <Button mnemonicParsing="false" onAction="#addColumn" text="New" />
                          </items>
                        </ToolBar>
                        <ScrollPane fx:id="scrollColumns" hbarPolicy="NEVER" pannable="true" prefHeight="300.0">
                           <content>
                              <VBox fx:id="scrollContent" prefHeight="132.0" />
                           </content>
                        </ScrollPane>
                     </children>
                  </VBox>
                  </Tab>
                  <Tab text="Indexes">
                     <VBox maxHeight="-Infinity"  minHeight="-Infinity" minWidth="-Infinity" prefWidth="1210.0" >
                        <children>
                           <ToolBar prefHeight="26.0" prefWidth="200.0">
                              <items>
                                 <Button mnemonicParsing="false" onAction="#addColumn" text="New" />
                              </items>
                           </ToolBar>
                           <ScrollPane fx:id="scrollIndexes" hbarPolicy="NEVER" pannable="true" prefHeight="300.0">
                              <content>
                                 <VBox fx:id="scrollContentIndexes" prefHeight="132.0" />
                              </content>
                           </ScrollPane>
                        </children>
                     </VBox>
                  </Tab>
                  <Tab text="Foreign Keys">
                     <VBox maxHeight="-Infinity"  minHeight="-Infinity" minWidth="-Infinity" prefWidth="1210.0" >
                        <children>
                           <ToolBar prefHeight="26.0" prefWidth="200.0">
                              <items>
                                 <Button mnemonicParsing="false" onAction="#addColumn" text="New" />
                              </items>
                           </ToolBar>
                           <ScrollPane fx:id="scrollForeignKeys" hbarPolicy="NEVER" pannable="true" prefHeight="300.0">
                              <content>
                                 <VBox fx:id="scrollContentForeignKeys" prefHeight="132.0" />
                              </content>
                           </ScrollPane>
                        </children>
                     </VBox>
                  </Tab>
                  <Tab text="Triggers">
                     <VBox maxHeight="-Infinity"  minHeight="-Infinity" minWidth="-Infinity" prefWidth="1210.0" >
                        <children>
                           <ToolBar prefHeight="26.0" prefWidth="200.0">
                              <items>
                                 <Button mnemonicParsing="false" onAction="#addColumn" text="New" />
                              </items>
                           </ToolBar>
                           <ScrollPane fx:id="scrollTriggers" hbarPolicy="NEVER" pannable="true" prefHeight="300.0">
                              <content>
                                 <VBox fx:id="scrollContentTriggers" prefHeight="132.0" />
                              </content>
                           </ScrollPane>
                        </children>
                     </VBox>
                  </Tab>
               </tabs>
            </TabPane>
         </center>
         <bottom>
            <HBox alignment="CENTER_RIGHT">
               <children>
                  <Button text="Apply">
                     <HBox.margin>
                        <Insets right="10" top="10" bottom="10"/>
                     </HBox.margin>
                  </Button>
                  <Button text="Revert" >
                     <HBox.margin>
                        <Insets right="10" top="10" bottom="10"/>
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         </bottom>
      </BorderPane>
   </content>
</Tab>
