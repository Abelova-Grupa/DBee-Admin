<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>


<HBox prefHeight="100.0" prefWidth="250.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.abelovagrupa.dbeeadmin.view.PanelBrowser">
    <children>
        <BorderPane prefHeight="133.0" prefWidth="248.0" HBox.hgrow="ALWAYS">
            <top>
                <BorderPane prefHeight="54.0" prefWidth="198.0" BorderPane.alignment="CENTER">
                    <left>
                        <Label text="Schema" BorderPane.alignment="CENTER">
                            <BorderPane.margin>
                                <Insets left="10.0" />
                            </BorderPane.margin>
                        </Label>
                    </left>
                    <right>
                        <Button mnemonicParsing="false" prefHeight="27.0" BorderPane.alignment="CENTER">
                            <graphic>
                                <FontIcon iconLiteral="fas-sync-alt" styleClass="font-icon" />
                            </graphic>
                            <tooltip>
                                <Tooltip text="Refresh" />
                            </tooltip>
                        </Button>
                    </right>
                    <bottom>
                        <TextField promptText="Find " text="Search Objects" BorderPane.alignment="CENTER" fx:id="searchObjects">
                            <BorderPane.margin>
                                <Insets bottom="5.0" top="5.0" />
                            </BorderPane.margin></TextField>
                    </bottom>
                    <BorderPane.margin>
                        <Insets right="5.0" top="5.0" />
                    </BorderPane.margin>
                </BorderPane>
            </top>
            <center>
                <ScrollPane fitToWidth="true" fitToHeight="true">
                    <VBox fx:id="vboxBrowser" prefHeight="250.0" prefWidth="100.0" BorderPane.alignment="CENTER">
                        <children>

                        </children>
                    </VBox>
                </ScrollPane>
            </center>
        </BorderPane>
    </children>
</HBox>
