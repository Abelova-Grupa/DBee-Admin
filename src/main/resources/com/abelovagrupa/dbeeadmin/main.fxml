<VBox cache="true" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" nodeOrientation="LEFT_TO_RIGHT" prefWidth="1920.0" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1">
  <children>
    <MenuBar VBox.vgrow="NEVER">
      <menus>
        <Menu mnemonicParsing="false" text="File">
          <items>
            <MenuItem mnemonicParsing="false" text="New" />
            <MenuItem mnemonicParsing="false" text="Open…" />
            <Menu mnemonicParsing="false" text="Open Recent" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" text="Close" />
            <MenuItem mnemonicParsing="false" text="Save" />
            <MenuItem mnemonicParsing="false" text="Save As…" />
            <MenuItem mnemonicParsing="false" text="Revert" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" text="Preferences…" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" text="Quit" />
          </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Edit">
          <items>
            <MenuItem mnemonicParsing="false" text="Undo" />
            <MenuItem mnemonicParsing="false" text="Redo" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" text="Cut" />
            <MenuItem mnemonicParsing="false" text="Copy" />
            <MenuItem mnemonicParsing="false" text="Paste" />
            <MenuItem mnemonicParsing="false" text="Delete" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" text="Select All" />
            <MenuItem mnemonicParsing="false" text="Unselect All" />
          </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Help">
          <items>
            <MenuItem mnemonicParsing="false" text="About DBee Admin" />
          </items>
        </Menu>
      </menus>
    </MenuBar>
      <ToolBar prefHeight="40.0" prefWidth="200.0">
        <items>
          <Button fx:id="btnConnection" mnemonicParsing="false" onAction="#openConnectionSettings">
            <graphic>
              <FontIcon iconLiteral="fas-plug" iconSize="16" styleClass="font-icon" />
            </graphic>
               <tooltip>
                  <Tooltip text="Connection" />
               </tooltip>
          </Button>
          <Button layoutX="10.0" layoutY="12.0" mnemonicParsing="false" onAction="#newSchemaTab">
            <graphic>
              <FontIcon fx:id="btnNewDatabase" iconLiteral="fas-database" iconSize="16" styleClass="font-icon" />
            </graphic>
               <tooltip>
                  <Tooltip text="New Database" />
               </tooltip>
          </Button>
            <Separator orientation="VERTICAL" prefHeight="12.0" />
            <Button mnemonicParsing="false" fx:id="btnNewTable" onAction="#newTableTab">
               <graphic>
                  <FontIcon iconLiteral="fas-table" iconSize="16" styleClass="font-icon" />
               </graphic>
               <tooltip>
                  <Tooltip text="New Table" />
               </tooltip>
            </Button>
            <Separator orientation="VERTICAL" prefHeight="12.0" />
            <Button layoutX="74.0" layoutY="12.0" mnemonicParsing="false">
              <graphic>
                <FontIcon iconLiteral="fas-file-import" iconSize="16" styleClass="font-icon" />
              </graphic>
               <tooltip>
                  <Tooltip text="Import" />
               </tooltip>
            </Button>
            <Button layoutX="162.0" layoutY="12.0" mnemonicParsing="false">
              <graphic>
                <FontIcon iconLiteral="fas-file-export" iconSize="16" styleClass="font-icon" />
              </graphic>
               <tooltip>
                  <Tooltip text="Export" />
               </tooltip>
            </Button>
            <Separator orientation="VERTICAL" prefHeight="12.0" />
          <Button fx:id="btnNewScript" layoutX="162.0" layoutY="12.0" mnemonicParsing="false" onAction="#newScriptTab">
            <graphic>
              <FontIcon iconLiteral="fas-scroll" iconSize="16" styleClass="font-icon" />
            </graphic>
               <tooltip>
                  <Tooltip text="New Script" />
               </tooltip>
          </Button>
            <Button fx:id="btnImportScript" layoutX="162.0" layoutY="12.0" mnemonicParsing="false" onAction="#importSQLToNewTab">
                <graphic>
                    <FontIcon iconLiteral="fas-file-code" iconSize="16" styleClass="font-icon" />
                </graphic>
                <tooltip>
                    <Tooltip text="New Script From File" />
                </tooltip>
            </Button>
        </items>
      </ToolBar>
    <SplitPane fx:id="rightPane" dividerPositions="0.16" focusTraversable="true" VBox.vgrow="ALWAYS">
      <items>

        <HBox prefWidth="250.0">
          <children>
            <SplitPane fx:id="leftPane" orientation="VERTICAL" prefHeight="200.0" prefWidth="225.0" HBox.hgrow="ALWAYS">
              <items>
<!--                PLACE FOR BROWSER-->
<!--                PLACE FOR INFO-->
              </items>
            </SplitPane>
          </children>
        </HBox>

        <SplitPane fx:id="centerPane" orientation="VERTICAL">
          <items>
<!--              PLACE FOR EDITOR-->
<!--              PLACE FOR RESULTS-->
          </items>
        </SplitPane>
<!--          PLACE FOR HELP SECTION-->
      </items>
    </SplitPane>
    <HBox id="HBox" alignment="CENTER_LEFT" spacing="5.0" VBox.vgrow="NEVER">
      <children>
        <Label maxHeight="1.7976931348623157E308" text="© 2025. Abelova Grupa" HBox.hgrow="ALWAYS">
          <font>
            <Font size="11.0" fx:id="x3" />
          </font>
          <textFill>
            <Color red="0.625" green="0.625" blue="0.625" fx:id="x4" />
          </textFill>
        </Label>
        <Pane HBox.hgrow="ALWAYS" />
        <Label font="$x3" text="Version 0.1.0-SNAPSHOT" textFill="$x4" HBox.hgrow="NEVER" />
      </children>
      <padding>
        <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
      </padding>
    </HBox>
  </children>
</VBox>
